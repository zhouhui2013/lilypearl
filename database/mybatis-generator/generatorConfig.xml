<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

  <classPathEntry location="${generated.source.dir}\mysql-connector-java-5.1.23-bin.jar" />
    
  <context id="DB2Tables" targetRuntime="MyBatis3">
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://localhost:3306/lilypearl"
        userId="root"
        password="root">
    </jdbcConnection>

    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

    <javaModelGenerator targetPackage="com.next.model" targetProject="${generated.source.dir}\src">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

    <sqlMapGenerator targetPackage="com.next.dao.xml"  targetProject="${generated.source.dir}\src">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="com.next.dao"  targetProject="${generated.source.dir}\src">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

    <table schema="lilypearl" tableName="%" domainObjectName="" >
      <property name="useActualColumnNames" value="false"/>
    </table>

  </context>
</generatorConfiguration>